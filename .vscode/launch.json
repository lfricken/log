{
	"version": "0.2.0",
	"compounds": [
		{
			"name": "Build",
			"configurations": [
				"build all"
			]
		},
		{
			"name": "Debug Built",
			"configurations": [
				"chrome launch",
				"chrome attach",
				"watch server"
			]
		},
		{
			"name": "Debug React",
			"configurations": [
				"chrome launch react",
				"chrome attach",
				"watch server",
				"watch sass",
				"watch client"
			]
		},
		{
			"name": "Heroku Sim",
			"configurations": [
				"heroku start",
				"chrome launch"
			]
		},
		{
			"name": "Debug Tests",
			"configurations": [
				"test client",
				"test server"
			]
		}
	],
	"configurations": [
		{
			"presentation": {
				"hidden": true
			},
			"name": "test server",
			"type": "node-terminal",
			"request": "launch",
			"command": "yarn test",
			"cwd": "${workspaceFolder}"
		},
		{
			"presentation": {
				"hidden": true
			},
			"name": "test client",
			"type": "node-terminal",
			"request": "launch",
			"command": "yarn test",
			"cwd": "${workspaceFolder}/client"
		},
		{
			"presentation": {
				"hidden": true
			},
			"name": "watch server",
			"type": "node-terminal",
			"request": "launch",
			"command": "yarn start_watch",
			"cwd": "${workspaceFolder}"
		},
		{
			"presentation": {
				"hidden": true
			},
			"name": "watch client",
			"type": "node-terminal",
			"request": "launch",
			"command": "yarn start_watch",
			"cwd": "${workspaceFolder}/client"
		},
		{
			"presentation": {
				"hidden": true
			},
			"name": "watch sass",
			"type": "node-terminal",
			"request": "launch",
			"command": "yarn build_sass --watch",
			"cwd": "${workspaceFolder}/client"
		},
		{
			"presentation": {
				"hidden": true
			},
			"name": "build all",
			"type": "node-terminal",
			"request": "launch",
			"command": "yarn heroku-postbuild",
			"cwd": "${workspaceFolder}"
		},
		{
			"presentation": {
				"hidden": true
			},
			"name": "chrome launch",
			"request": "launch",
			"runtimeArgs": [
				"--remote-debugging-port=8080"
			],
			"type": "pwa-chrome",
			"url": "http://localhost:3001/a",
			"webRoot": "${workspaceFolder}"
		},
		{
			"presentation": {
				"hidden": true
			},
			"name": "chrome launch react",
			"request": "launch",
			"runtimeArgs": [
				"--remote-debugging-port=8080"
			],
			"type": "pwa-chrome",
			"url": "http://localhost:3000/a",
			"webRoot": "${workspaceFolder}"
		},
		{
			"presentation": {
				"hidden": true
			},
			"name": "chrome attach",
			"port": 8080,
			"timeout": 5000,
			"request": "attach",
			"type": "chrome",
			"webRoot": "${workspaceFolder}"
		},
		{
			"presentation": {
				"hidden": true
			},
			"name": "heroku start",
			"type": "node-terminal",
			"request": "launch",
			"command": "yarn heroku-sim",
			"cwd": "${workspaceFolder}"
		}
	]
}