{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "d",
			"request": "launch",
			"runtimeArgs": [
				"--remote-debugging-port=8080"
			],
			"type": "pwa-chrome",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}"
		},
		{
			"name": "c attach",
			"port": 8080,
			"timeout": 5000,
			"request": "attach",
			"type": "chrome",
			"webRoot": "${workspaceFolder}"
		},
		{
			"name": "server",
			"type": "node-terminal",
			"request": "launch",
			"command": "yarn dev",
			"cwd": "${workspaceFolder}"
		},
		{
			"name": "c start",
			"type": "node-terminal",
			"request": "launch",
			"command": "yarn dev",
			"cwd": "${workspaceFolder}/client"
		}
	],
	"compounds": [
		{
			"name": "Debug",
			"configurations": [
				"server",
				"c start",
				"d",
				"c attach"
			]
		}
	]
}