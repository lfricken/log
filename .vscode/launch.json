{
	"version": "0.2.0",
	"compounds": [
		{
			"name": "Debug",
			"configurations": [
				"client launch chrome",
				"client attach chrome",
				"server start and attach",
				"client start"
			]
		},
		{
			"name": "Heroku Sim",
			"configurations": [
				"start heroku",
				"client launch chrome"
			]
		}
	],
	"configurations": [
		{
			"name": "server start and attach",
			"type": "node-terminal",
			"request": "launch",
			"command": "yarn start_watch",
			"cwd": "${workspaceFolder}"
		},
		{
			"name": "client start",
			"type": "node-terminal",
			"request": "launch",
			"command": "yarn start_watch",
			"cwd": "${workspaceFolder}/client"
		},
		{
			"name": "client launch chrome",
			"request": "launch",
			"runtimeArgs": [
				"--remote-debugging-port=8080"
			],
			"type": "pwa-chrome",
			"url": "http://localhost:3001",
			"webRoot": "${workspaceFolder}"
		},
		{
			"name": "client attach chrome",
			"port": 8080,
			"timeout": 5000,
			"request": "attach",
			"type": "chrome",
			"webRoot": "${workspaceFolder}"
		},
		{
			"name": "start heroku",
			"type": "node-terminal",
			"request": "launch",
			"command": "yarn heroku-sim",
			"cwd": "${workspaceFolder}"
		}
	]
}