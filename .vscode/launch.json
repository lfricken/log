	"configurations": [
		{
			"type": "node-terminal",
			"name": "Debug",
			"request": "launch",
			"command": "npm run start",
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "node-terminal",
			"name": "Debug with Nodemon",
