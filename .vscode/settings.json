{
	"debug.node.autoAttach": "on",
	"editor.formatOnSave": true,
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"html.format.wrapLineLength": 0,
	"files.exclude": {
		"**/*.bat": true,
		"**/*.sln": true,
		"**/*.njsproj": true,
		"**/*.user": true,
		"**/obj": true,
		"**/bin": true,
		"**/node_modules": true,
		"**/.vs": true,
		"**/.gitignore": true,
		"**/.gitattributes": true,
		"**/.env": true,
		"**/*.lock": true,
	},
	"eslint.format.enable": true,
	"eslint.packageManager": "yarn"
}